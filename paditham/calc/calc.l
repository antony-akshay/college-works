%{
#include <stdio.h>
#include <stdlib.h>
#include "y.tab.h"   /* generated by yacc/bison */
extern int yylval;
%}

%option noyywrap

%%
[0-9]+      { yylval = atoi(yytext); return NUMBER; }
[ \t]       ;      /* ignore spaces and tabs */
[\n]        { return 0; }  /* end of input */
.           { return yytext[0]; }  /* return single char for operators */
%% 
